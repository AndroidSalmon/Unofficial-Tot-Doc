<?xml version="1.0" encoding="UTF-8"?>
<keymap id="my_keymap">
    <layouts>
        <layout name="Windows" platform="PC"/>
    </layouts>
    <actions>
        <action id="$conan">
            <description>Conan Escape Menu</description>
            <shortcut layout="Windows">ESC</shortcut>
        </action>
        <action id="$admin">
            <description>Sudo Admin Panel</description>
            <shortcut layout="Windows">Shift+U</shortcut>
        </action>
        <action id="$client">
            <description>Sudo Client Panel</description>
            <shortcut layout="Windows">Shift+Alt+U</shortcut>
        </action>
        <action id="$custom">
            <description>Custom Panel</description>
            <shortcut layout="Windows">Shift+B</shortcut>
        </action>
    </actions>
</keymap>